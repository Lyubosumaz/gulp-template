    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true
    },
    "include": [
        "src/typescript/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}